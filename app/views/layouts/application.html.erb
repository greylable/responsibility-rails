<!DOCTYPE html>
<html>
<head>
  <title>ResponsibilityRails</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body>
<nav>
  <div class="nav-wrapper">
    <a href="/" class="brand-logo left">
      <%= image_tag('app_logo_white.png') %>
    </a>
      <a href="#" data-activates="slide-out" class="button-collapse right hide-on-large-only show-on-medium-and-down"><i class="material-icons right">menu</i></a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <% if user_signed_in? %>
            <li><%= link_to 'Profile', user_profile_path(current_user), class: 'waves-effect' %></li>
            <li><%= link_to 'Goals', goals_path, class: 'waves-effect' %></li>
            <li><%= link_to 'Pomodoro', timeblocks_path, class: 'waves-effect' %></li>
            <li><%= link_to 'Journals', journals_path, class: 'waves-effect' %></li>
            <li><%= link_to 'Responsibilities', responsibilities_path, class: 'waves-effect' %></li>
            <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'waves-effect' %></li>
        <% else %>
            <li><%= link_to 'Login', new_user_session_path %></li>
        <% end %>
      </ul>
  </div>
</nav>

<ul id="slide-out" class="side-nav">
  <% if user_signed_in? %>
    <li>
      <div class="user-view">
        <div class="background">
          <%= image_tag('app_logo.png') %>
        </div>
        <a href="#!user">
          <!--<img class="circle" src="images/yuna.jpg">-->
          Profile Pict
        </a>
        <a href="#!name"><span class="white-text name">Username</span></a>
        <a href="#!email"><span class="white-text email">Email</span></a>
      </div>
    </li>
    <li>
      <%=link_to(user_profile_path(current_user), class: 'waves-effect') do %>
        <i class="material-icons">cloud</i>Profile
      <% end %>
    </li>
    <li>
      <%= link_to(responsibilities_path, class: 'waves-effect') do %>
        <i class="material-icons">cloud</i>Responsibilities
      <% end %>
    </li>
    <li>
      <%= link_to(journals_path, class: 'waves-effect') do %>
        <i class="material-icons">book</i>Journal
      <% end %>
    </li>
    <li>
      <%= link_to(goals_path, class: 'waves-effect') do %>
        <i class="material-icons">book</i>Goal
      <% end %>
    </li>
    <li>
      <%= link_to(timeblocks_path, class: 'waves-effect') do %>
        <i class="material-icons">access_time</i>Pomodoro
      <% end %>
    </li>
    <li>
      <div class="divider"></div>
    </li>
    <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'waves-effect' %></li>
  <% else %>
    <li><%= link_to 'Login', new_user_session_path %></li>
  <% end %>
</ul>
<p class="notice"><%= notice %></p>
<div class="container">
  <%= yield %>
</div>
</body>
</html>
