<h1>Update Profile</h1>

<div class="row">
  <div class="col s8 offset-s2">
    <div class="card">
      <div class="card-content">
        <span class="card-title">User details</span>
        <%= simple_form_for @user, url: user_profile_path do |f| %>
          <%= f.input :firstname %>
          <%= f.input :lastname %>
          <%= f.input :email %>
          <%= f.input :avatar, as: :file %>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
    <!--<div class="card-action">-->
      <!--<#% link_to 'back', :back %>-->
    <!--</div>-->
  </div>
</div>
