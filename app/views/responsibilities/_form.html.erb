<div class="row">
  <div class="col s8 offset-s2">
    <div class="card">
      <div class="card-content">
        <span class="card-title">Responsbility details</span>
        <%= simple_form_for @responsibility do |f| %>
            <%= f.input :name %>
            <%= f.input :details %>
            <%= f.input :status %>
            <%= f.text_field :start_date, class: 'datepicker', placeholder: 'Start Date' %>
            <%= f.text_field :deadline, class: 'datepicker', placeholder: 'End Date' %>
            <%= f.button :submit %>
        <% end %>
      </div>
    </div>
    <div class="card-action">
      <%= link_to 'back', :back %>
    </div>
  </div>
</div>