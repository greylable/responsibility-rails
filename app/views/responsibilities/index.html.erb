<h1>Responsibilities</h1>
<% count = 1 %>
<% @responsibilities.each do |responsibility| %>
    <div class="card">
      <div class="card-content">
        <span class="card-title"><%= count.to_s + '. ' + responsibility.name.titleize %></span>
        <%= responsibility.details %>
        <div class="right-align">
          <%= link_to 'Show', responsibility, class: 'waves-effect waves-light btn' %>
          <%= link_to 'Edit', edit_responsibility_path(responsibility), class: 'waves-effect waves-light btn' %>
          <%= link_to 'Delete', (responsibility), method: :delete, class: 'waves-effect waves-light btn' %>
        </div>

      </div>
    </div>
    <% count += 1 %>
<% end %>


<%= link_to('+ responsibility', new_responsibility_path, class: 'waves-effect waves-light btn') %>